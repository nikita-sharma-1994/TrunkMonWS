files:
  "/etc/profile.d/oracle.sh":
    mode: "000755"
    owner: root
    group: root
    content:
      #!/usr/bin/env bash
    
      export ORACLE_HOME=/usr/lib/oracle/12.1/client64
      export LD_LIBRARY_PATH=/usr/lib/oracle/12.1/client64/lib
      export TNS_ADMIN=/usr/lib/oracle/12.1/client64/network/admin
      export PATH=/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin:/opt/aws/bin:/usr/lib/oracle/12.1/client64/bin:/usr/lib/oracle/12.1/client64/network/admin:/home/ec2-user/.local/bin:/home/ec2-user/bin
